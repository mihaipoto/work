                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="10" ColumnDefinitions="auto, auto">

                            <RadioButton GroupName="ungrup" 
                                         Content="{Binding }"
                                         Value="{Binding }"
