<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.MainPage"
             xmlns:badge="clr-namespace:Syncfusion.Maui.Core;assembly=Syncfusion.Maui.Core"
             xmlns:chart="clr-namespace:Syncfusion.Maui.Charts;assembly=Syncfusion.Maui.Charts"
             xmlns:syncfusion="clr-namespace:Syncfusion.Maui.DataGrid;assembly=Syncfusion.Maui.DataGrid"
             xmlns:local="clr-namespace:MauiApp2"

             x:DataType="local:MainViewModel">

    <ContentPage.Resources>
        <ResourceDictionary>
            <local:DisplayBindingConverter x:Key="displayBindingConverter" />
            <local:SummaryConverter x:Key="summaryConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>

        <VerticalStackLayout BackgroundColor="Aqua">

            <Button
                Text="Create Document"
                FontAttributes="Bold"
                SemanticProperties.Hint="Creates Word document you click"
                Command="{Binding CreateDocumentCommand}"
                HorizontalOptions="Center" />

            <Button
                Text="Popup"
                FontAttributes="Bold"
                SemanticProperties.Hint="Creates Word document you click"
                Command="{Binding ShowpopupCommand}"
                HorizontalOptions="Center" />

            <Button
                Text="Show actions"
                FontAttributes="Bold"
                SemanticProperties.Hint="Creates Word document you click"
                Command="{Binding ShowActionsCommand}"
                HorizontalOptions="Center" />

            <Button
                Text="Display prompt"
                FontAttributes="Bold"
                SemanticProperties.Hint="Creates Word document you click"
                Command="{Binding DisplayPromptCommand}"
                HorizontalOptions="Center" />

            <Button
                Text="{Binding CevaMesaj}"
                FontAttributes="Bold"
                SemanticProperties.Hint="Creates Word document you click"
                Command="{Binding RequestMessageCommand}"
                HorizontalOptions="Center" />

            <Label Text="{Binding CevaMesaj}" />

