<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Aplicatie.Views.AddPage"
             xmlns:viewModels="clr-namespace:Aplicatie.ViewModels"
             x:DataType="viewModels:AddViewModel"
             x:Name="this"
             xmlns:controls="clr-namespace:Aplicatie.Controls"
             Title="AddPage">
    <VerticalStackLayout>
        
        
        <Picker x:Name="fluxPicker"
                ItemsSource="{Binding BindingContext.AppConfig.Fluxuri, Source={x:Reference this}}"
                x:DataType="viewModels:FluxModelVM"
                ItemDisplayBinding="{Binding IdFlux}"
                />

        <controls:Dinamic BindingContext="{Binding Source={x:Reference fluxPicker}, Path=SelectedItem}"
                          ViewModel="{Binding Source={x:Reference fluxPicker}, Path=SelectedItem}" />
    </VerticalStackLayout>
</ContentPage>