<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Aplicatie.Views.AddPage"
             xmlns:viewModels="clr-namespace:Aplicatie.ViewModels"
             x:DataType="viewModels:AddViewModel"
             x:Name="this"
             xmlns:controls="clr-namespace:Aplicatie.Controls"
             Title="AddPage">
    <VerticalStackLayout>
        <Label 
            Text="{Binding AppConfig.ModDeLucru}"
            TextColor="red"
            VerticalOptions="Start" 
            HorizontalOptions="Start" />
        <controls:Dinamic2 BindingContext="{Binding AppConfig}"
                          ViewModel="{Binding BindingContext.AppConfig, Source={x:Reference this}}"/>
    </VerticalStackLayout>
</ContentPage>