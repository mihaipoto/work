<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Aplicatie.Controls.ItemEtapa2Control"
             xmlns:controls="clr-namespace:Aplicatie.Controls"
             xmlns:viewmodel="clr-namespace:Aplicatie.ViewModels"
             x:DataType="viewmodel:ItemEtapa2VM">
    <VerticalStackLayout>
        <controls:LabelLabelControl Cheie="Nume:"
                                    Valoare="{Binding ItemNume}" />
        <controls:LabelLabelControl Cheie="Valoare:"
                                    Valoare="{Binding ItemValoare}" />

        <controls:SubItemEtapa2 BindingContext="{Binding SubItemEtapa}" />
    </VerticalStackLayout>
</ContentView>
