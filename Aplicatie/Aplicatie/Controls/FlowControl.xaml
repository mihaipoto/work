<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Aplicatie.Controls.FlowControl"
             xmlns:viewmodels="clr-namespace:Aplicatie.ViewModels"
             xmlns:controls="clr-namespace:Aplicatie.Controls"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:DataType="viewmodels:FlowVM">

    <VerticalStackLayout>
        <HorizontalStackLayout>
            <controls:LabelLabelControl Cheie="ID:"
                                        Valoare="{Binding Id}"
                                        ExpandCommand="{Binding ExpandEtapa2Command}" />
            <controls:AcceptCancelControl AcceptCommand="{Binding AcceptEtapa2Command}" />
        </HorizontalStackLayout>
        

        <Border IsVisible="{Binding IsEtapa2Expanded}">
            <controls:Etapa2Control BindingContext="{Binding RezultatEtapa2}" />
        </Border>
        
       



    </VerticalStackLayout>
</ContentView>
