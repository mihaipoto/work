<?xml version="1.0" encoding="utf-8" ?>
<CollectionView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                x:Class="Aplicatie.Controls.NewContent1"
                xmlns:fluentValidationResults="clr-namespace:FluentValidation.Results;assembly=FluentValidation">
  
        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="fluentValidationResults:ValidationFailure">
                <Grid Padding="10"
                      RowDefinitions="AUTO, AUTO">
        
                    <Label Text="{Binding ErrorMessage}"
                           FontAttributes="Bold" />
                    <Label Grid.Row="1"
                           Text="{Binding Severity}"
                           FontAttributes="Italic"/>
                </Grid>
            </DataTemplate>
        </CollectionView.ItemTemplate>
       
   


</CollectionView>
